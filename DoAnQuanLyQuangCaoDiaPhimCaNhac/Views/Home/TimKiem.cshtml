@model IEnumerable<DoAnQuanLyQuangCaoDiaPhimCaNhac.Models.DiaPhimCaNhac>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Kết quả tìm kiếm";
}

<h3 class="text-white">Kết quả cho từ khóa: "@ViewBag.Keyword"</h3>
<hr />

@if (!Model.Any())
{
    <p class="text-muted">Không tìm thấy sản phẩm phù hợp.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="product-card">
                    <a href="@Url.Action("ChiTiet", "Home", new { maDia = item.MaDia })">
                        <img src="~/Content/Images/@item.AnhBia" alt="@item.TenDia" />
                    </a>
                    <div class="card-body">
                        <h5>@item.TenDia</h5>
                        <p>@item.GiaBan.ToString("N0") VNĐ</p>
                        <button class="btn btn-outline-light">Thêm vào giỏ</button>
                    </div>
                </div>
            </div>
        }
    </div>
}
