@using DoAnQuanLyQuangCaoDiaPhimCaNhac.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/Content/site-custom.css" rel="stylesheet" />
    var noiBat = ViewBag.SanPhamNoiBat as List<DoAnQuanLyQuangCaoDiaPhimCaNhac.Models.sp_GetSanPhamNoiBat_Result>;
    var moi = ViewBag.SanPhamMoi as List<DoAnQuanLyQuangCaoDiaPhimCaNhac.Models.DiaPhimCaNhac>;
}

<h2 class="text-white mb-4">🌟 Sản phẩm nổi bật</h2>
<div class="row">
    @foreach (var item in noiBat)
    {
        <div class="col-md-3 mb-4">
            <div class="product-card">
                <a href="@Url.Action("ChiTiet", "Home", new { maDia = item.MaDia })">
                    <img src="~/Content/Images/@item.AnhBia" alt="@item.TenDia" />
                </a>
                <div class="card-body">
                    <h5>@item.TenDia</h5>
                    <p>@item.GiaBan.ToString("N0") VNĐ</p>
                    <button class="btn btn-outline-light">Thêm vào giỏ</button>
                </div>
            </div>
        </div>
    }
</div>

<hr class="border-light" />

<h2 class="text-white mb-4">🆕 Sản phẩm mới</h2>
<div class="row">
    @foreach (var item in moi)
    {
        <div class="col-md-3 mb-4">
            <div class="product-card">
                <a href="@Url.Action("ChiTiet", "Home", new { maDia = item.MaDia })">
                    <img src="~/Content/Images/@item.AnhBia" alt="@item.TenDia" />
                </a>
                <div class="card-body">
                    <h5>@item.TenDia</h5>
                    <p>@item.GiaBan.ToString("N0") VNĐ</p>
                    <button class="btn btn-outline-light">Thêm vào giỏ</button>
                </div>
            </div>
        </div>
    }
</div>